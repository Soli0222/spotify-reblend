{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
  ],
  timezone: 'Asia/Tokyo',
  rangeStrategy: 'bump',
  prConcurrentLimit: 20,
  prHourlyLimit: 10,
  reviewers: [
    'Soli0222',
  ],
  semanticCommits: 'enabled',
  prCreation: 'immediate',
  rebaseWhen: 'auto',
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^\\.github/workflows/.*\\.ya?ml$/',
      ],
      matchStrings: [
        'node-version:\\s*[\'"]?(?<currentValue>[^\'"\\s]+)[\'"]?',
      ],
      depNameTemplate: 'node',
      datasourceTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      matchManagers: [
        'github-actions',
      ],
      commitMessageTopic: 'GitHub Action {{depName}}',
      automerge: true,
    },
    {
      matchManagers: [
        'docker-compose',
        'dockerfile',
      ],
      matchDepNames: [
        '!node',
      ],
      commitMessageTopic: 'Docker {{depName}}',
      automerge: true,
    },
    {
      matchDepNames: [
        'node',
      ],
      groupName: 'node',
      commitMessageTopic: 'Node.js',
      automerge: true,
    },
    {
      matchManagers: [
        'npm',
      ],
      commitMessageTopic: 'Node {{depName}}',
      automerge: true,
    },
  ],
}
